{
    "author": "ProximaCentaury",
    "dependencies": {
        "chalk": "^5.3.0",
        "os-utils": "^0.0.14",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@playwright/test": "^1.49.0",
        "@types/node": "^22.9.1",
        "@types/os-utils": "^0.0.4",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@vitejs/plugin-react": "^4.3.3",
        "cross-env": "^7.0.3",
        "electron": "^33.2.0",
        "electron-builder": "^25.1.8",
        "eslint": "^9.13.0",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.14",
        "globals": "^15.11.0",
        "npm-run-all": "^4.1.5",
        "typescript": "~5.6.2",
        "typescript-eslint": "^8.11.0",
        "vite": "^5.4.10",
        "vite-tsconfig-paths": "^5.1.3",
        "vitest": "^2.1.5"
    },
    "description": "Rainmeter-like app based on web dev technologies to enhance your desktop with utility, monitoring and shortcuting tools and widgets",
    "main": "dist/electron/core.js",
    "name": "holometrics",
    "private": true,
    "scripts": {
        "build": "tsc && vite build",
        "dev": "npm-run-all --parallel start:react-dev start:electron-dev",
        "dist:linux": "npm run transpile:electron && npm run build && electron-builder --linux --x64",
        "dist:mac": "npm run transpile:electron && npm run build && electron-builder --mac --arm64",
        "dist:win": "npm run transpile:electron && npm run build && electron-builder --win --x64",
        "preview": "vite preview",
        "start:electron-dev": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
        "start:react-dev": "vite",
        "test:E2E": "playwright test",
        "test:unit": "vitest src/tests/unit",
        "transpile:electron": "tsc --project src/electron/tsconfig.json"
    },
    "type": "module",
    "version": "0.0.0"
}
